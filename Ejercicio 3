// 3. Calcular promedio ponderado
function promedioPonderado(notas) {
  return notas.reduce((suma, nota) => suma + nota.valor * nota.peso, 0);
}

const notas = [
  { valor: 90, peso: 0.5 },
  { valor: 80, peso: 0.3 },
  { valor: 70, peso: 0.2 }
];

console.log('\n--promedio ponderado ---');
console.log(promedioPonderado(notas)); // 83
